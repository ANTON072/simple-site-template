{
	"name": "corporate-site-template",
	"scripts": {
		"prebuild": "npm run clean",
		"build": "run-p build:*",
		"build:11ty": "eleventy",
		"build:assets": "node -e \"require('fs').cpSync('./src/assets', './wp_theme/dist', {recursive: true})\"",
		"build:css": "postcss src/assets/css/main.css -o wp_theme/dist/bundle.css",
		"start": "npm run build && run-p watch:*",
		"watch:assets": "onchange \"./src/assets/**/*\" -- npm run build:assets",
		"watch:css": "onchange \"./src/assets/css/**/*\" -- npm run build:css",
		"clean": "rimraf dist && rimraf wp_theme/dist"
	},
	"devDependencies": {
		"@11ty/eleventy": "^3.0.0",
		"npm-run-all": "^4.1.5",
		"onchange": "^7.1.0",
		"postcss": "^8.4.49",
		"postcss-cli": "^11.0.0",
		"postcss-csso": "^6.0.1",
		"postcss-import": "^16.1.0",
		"prettier": "^3.4.2",
		"rimraf": "^6.0.1"
	}
}
